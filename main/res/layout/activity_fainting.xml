<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fainting">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAINTING"
            android:textSize="34sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vasovagal Syncope (Neurocardiogenic Syncope)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="Description: The most common type of fainting, caused by a sudden drop in blood pressure due to overstimulation of the vagus nerve. Triggers include stress, fear, standing for long periods, or pain." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orthostatic Hypotension Syncope"
                android:textAlignment="center"
                android:textSize="16sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Description: Occurs when standing up too quickly, leading to a sudden drop in blood pressure and reduced blood flow to the brain. Common in older adults, dehydrated individuals, or those on certain medications." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiac Syncope"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Description: Caused by heart-related conditions like arrhythmias or valve disorders, leading to a sudden loss of consciousness due to decreased blood flow to the brain. It is serious and requires medical evaluation." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>